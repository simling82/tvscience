<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xdm"
    >
    <!-- 此处有五个自定义参数:
    	cursorRes指定光标图片
    	itemWidth为子项宽度
    	itemHeight为子项高度
    	columns为列数
    	animationType 动画类型 默认效果为跃迁 也可设为 TRANSLATE 平移-->
    <reco.frame.tv.view.TvGridView
        android:id="@+id/tgv_imagelist"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px1000"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/px200"
        android:layout_marginTop="@dimen/px100"
        android:layout_marginBottom="@dimen/px150"
        tv:cursorRes="@drawable/cursor_rectangle_boarder_white"
        tv:itemWidth="@dimen/px300"
        tv:itemHeight="@dimen/px390"
        tv:columns="5"
        tv:paddingLeft="@dimen/px21"
        tv:paddingTop="@dimen/px21"
        tv:animationType="DEFAULT"
        android:descendantFocusability="afterDescendants">
    </reco.frame.tv.view.TvGridView>

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px17"
        android:background="@drawable/xind"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:focusable="false"/>

</RelativeLayout>
