<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xbg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:text="客服热线：96956"
        android:textColor="@color/white" />


    <reco.frame.tv.view.TvButton
        android:id="@+id/iv_home"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="55dp"
        android:nextFocusDown="@+id/tv_btn_science"
        android:nextFocusRight="@+id/iv_home_monk"
        android:textColor="@color/white"
        android:textSize="@dimen/px50"
        android:background="@drawable/button_kepu"/>

    <reco.frame.tv.view.TvButton
        android:id="@+id/iv_home_monk"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/iv_home"
        android:nextFocusDown="@+id/jc_video"
        android:nextFocusLeft="@+id/iv_home"
        android:text="科学中心"
        android:textColor="@color/white"
        android:textSize="@dimen/px50" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/iv_home_cate_one"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/iv_home_monk"
        android:text="电视商城"
        android:textColor="@color/white"
        android:textSize="@dimen/px50"
        tv:cursorRes="@drawable/cursor_rectangle_boarder_orange" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/iv_home_go_home"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/iv_home_cate_one"
        android:text="科学临展"
        android:textColor="@color/white"
        android:textSize="@dimen/px50" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/iv_home_cate_two"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/iv_home_go_home"
        android:text="宋韶光专区"
        android:textColor="@color/white"
        android:textSize="@dimen/px50" />


    <reco.frame.tv.view.TvButton
        android:id="@+id/tv_btn_science"
        android:layout_width="@dimen/px300"
        android:layout_height="@dimen/px170"
        android:layout_below="@+id/iv_home"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape_fen"
        android:gravity="center"
        android:nextFocusRight="@+id/uvv_vido"
        android:nextFocusUp="@id/iv_home"
        android:text="少儿科普"
        android:textColor="@color/white"
        android:textSize="@dimen/px36"
        tv:cursorRes="@drawable/cursor_rectangle_boarder_orange" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tv_btn_dance"
        android:layout_width="@dimen/px300"
        android:layout_height="@dimen/px170"
        android:layout_below="@+id/tv_btn_science"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape_yellow"
        android:gravity="center"
        android:nextFocusDown="@+id/tv_btn_song"
        android:nextFocusRight="@+id/uvv_vido"
        android:nextFocusUp="@id/tv_btn_science"
        android:text="少儿舞蹈"
        android:textColor="@color/white"
        android:textSize="@dimen/px36" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tv_btn_song"
        android:layout_width="@dimen/px300"
        android:layout_height="@dimen/px170"
        android:layout_below="@+id/tv_btn_dance"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape_green"
        android:gravity="center"
        android:nextFocusDown="@+id/tv_btn_enlightenment"
        android:nextFocusRight="@+id/uvv_vido"
        android:nextFocusUp="@id/tv_btn_dance"
        android:text="少儿歌曲"
        android:textColor="@color/white"
        android:textSize="@dimen/px36" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tv_btn_enlightenment"
        android:layout_width="@dimen/px300"
        android:layout_height="@dimen/px170"
        android:layout_below="@+id/tv_btn_song"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape_blue"
        android:gravity="center"
        android:nextFocusRight="@+id/tiv_image1"
        android:nextFocusUp="@id/tv_btn_song"
        android:text="少儿启蒙"
        android:textColor="@color/white"
        android:textSize="@dimen/px36" />

    <io.vov.vitamio.widget.VideoView
        android:id="@+id/uvv_vido"
        android:layout_width="@dimen/px750"
        android:layout_height="@dimen/px450"
        android:layout_below="@+id/iv_home"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_btn_science"
        android:nextFocusDown="@+id/tiv_image1"
        android:nextFocusLeft="@+id/tv_btn_science"
        android:nextFocusRight="@+id/tiv_image2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_home"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/tv_btn_science"
        android:src="@drawable/btn1_" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tiv_image1"
        android:layout_width="@dimen/px750"
        android:layout_height="@dimen/px290"
        android:layout_alignBottom="@+id/tv_btn_enlightenment"
        android:layout_alignLeft="@+id/uvv_vido"
        android:layout_alignStart="@+id/uvv_vido"
        android:background="@drawable/xians"
        android:nextFocusLeft="@+id/tv_btn_enlightenment"
        android:nextFocusUp="@+id/uvv_vido"
        android:scaleType="centerCrop"
        tv:cursorRes="@drawable/cursor_rectangle_boarder_orange" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tiv_image2"
        android:layout_width="@dimen/px350"
        android:layout_height="@dimen/px450"
        android:layout_below="@+id/iv_home"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/uvv_vido"
        android:background="@drawable/ad0"
        android:nextFocusLeft="@+id/uvv_vido"
        android:nextFocusUp="@+id/iv_home_go_home"
        tv:cursorRes="@drawable/cursor_rectangle_boarder_orange" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tiv_image3"
        android:layout_width="@dimen/px350"
        android:layout_height="@dimen/px290"
        android:layout_below="@+id/tiv_image2"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tiv_image1"
        android:background="@drawable/ad1"
        android:nextFocusLeft="@+id/tiv_image1"
        android:nextFocusUp="@+id/tiv_image2" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tiv_image4"
        android:layout_width="@dimen/px400"
        android:layout_height="@dimen/px240"
        android:layout_below="@+id/iv_home"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tiv_image2"
        android:background="@drawable/ad2"
        android:nextFocusLeft="@+id/tiv_image2"
        android:nextFocusUp="@+id/iv_home_cate_two" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tiv_image5"
        android:layout_width="@dimen/px400"
        android:layout_height="@dimen/px240"
        android:layout_below="@+id/tiv_image4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tiv_image2"
        android:background="@drawable/ad3"
        android:nextFocusLeft="@+id/tiv_image2"
        android:nextFocusUp="@+id/tiv_image4" />

    <reco.frame.tv.view.TvButton
        android:id="@+id/tiv_image6"
        android:layout_width="@dimen/px400"
        android:layout_height="@dimen/px240"
        android:layout_below="@+id/tiv_image5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tiv_image3"
        android:background="@drawable/ad4"
        android:nextFocusLeft="@+id/tiv_image3"
        android:nextFocusUp="@+id/tiv_image5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="18dp"
        android:focusable="true"
        android:src="@drawable/lb"
        android:visibility="gone" />
</RelativeLayout>
